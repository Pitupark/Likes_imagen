<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIke Funko Pop"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/colorTitulo"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:background="@color/borde"
        android:padding="2dp"
        android:layout_marginRight="30dp"
        android:layout_height="wrap_content">
<ImageView
    android:layout_width="match_parent"
    android:background="@drawable/funko"
    android:layout_height="335dp"/>
        <ImageButton
            android:id="@+id/imgbtn"
            android:layout_width="40dp"
            android:layout_marginTop="280dp"
            android:layout_marginLeft="120dp"
            android:background="@drawable/like"
            android:layout_height="40dp" />
        <ImageButton
            android:id="@+id/imgbtn1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="280dp"
            android:background="@drawable/dislike"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/et1"
            android:textColor="@color/colorTextos"
            android:layout_width="wrap_content"
            android:text="Numero de votos positivos : "
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/et2"
            android:textColor="@color/colorTitulo"
            android:layout_width="wrap_content"
            android:text=""
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/et3"
            android:textColor="@color/colorTextos"
            android:text="Numero de votos negativos : "
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/et4"
            android:textColor="@color/colorTitulo"
            android:layout_width="wrap_content"
            android:text=""
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/et5"
            android:textColor="@color/colorTextos"
            android:layout_width="wrap_content"
            android:text="Balance : "
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/et6"
            android:textColor="@color/colorTitulo"
            android:layout_width="wrap_content"
            android:text=""
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
